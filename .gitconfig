# This is Git's per-user configuration file.
[core]
    editor = vim
[user]
    name = Adrian Siembida
    email = bida94@gmail.com
[alias]
    ce = config --global -e
    skroty = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1 => \\2/' | grep -v 'alias'| awk 'BEGIN { FS = \"=>\" }{ printf(\"%-20s=>%s\\n\", $1,$2)}'|sort

    g = grep
    b = branch
    s = status -s

    co = checkout
    ca = commit --amend
    cm = commit -m

    ap = add -p
    ps = push
    pl = pull
    cmp = "!git commit -m '$@' && git push #"

    pobierz = "!git fetch -av && git co $1 g pl"

    mgdv = "!git checkout development && git pull origin development && git checkout $1 && git merge development"
    mgqf = "!git checkout master && git pull origin master && git checkout $1 && git merge master"
    rbdv = "!git checkout development && git pull origin development && git checkout $1 && git rebase development"
    rbqf = "!git checkout master && git pull origin master && git checkout $1 && git rebase master"
